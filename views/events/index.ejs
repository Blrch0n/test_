<%- include('../partials/header-layout') %>

<style>
  .events-shell {
    max-width: 1120px;
    margin: 2.5rem auto 3rem;
    padding: 0 1.5rem;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .page-header h1 {
    font-size: 2rem;
    font-weight: 700;
    color: #111827;
  }

  .filter-form {
    background: white;
    padding: 1.75rem;
    border-radius: 18px;
    box-shadow: 0 4px 16px rgba(15, 23, 42, 0.06);
    border: 1px solid #e5e7eb;
    margin-bottom: 2rem;
  }

  .filter-form h3 {
    margin-bottom: 1.25rem;
    color: #111827;
    font-size: 1.1rem;
    font-weight: 600;
  }

  .filter-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .filter-grid label {
    display: block;
    margin-bottom: 0.4rem;
    font-size: 0.85rem;
    font-weight: 600;
    color: #374151;
  }

  .filter-grid input,
  .filter-grid select {
    width: 100%;
    padding: 0.7rem;
    border: 1px solid #d1d5db;
    border-radius: 10px;
    font-size: 0.9rem;
  }

  .filter-grid input:focus,
  .filter-grid select:focus {
    outline: none;
    border-color: #2563eb;
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
  }

  .events-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  .event-card {
    background: white;
    border-radius: 18px;
    box-shadow: 0 4px 16px rgba(15, 23, 42, 0.06);
    border: 1px solid #e5e7eb;
    overflow: hidden;
    transition: all 0.3s;
    display: flex;
    flex-direction: column;
  }

  .event-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(15, 23, 42, 0.12);
  }

  .event-header {
    background: #f9fafb;
    padding: 1.5rem;
    border-bottom: 1px solid #e5e7eb;
  }

  .event-header h3 {
    margin-bottom: 0.5rem;
    font-size: 1.15rem;
    font-weight: 600;
    color: #111827;
  }

  .event-body {
    padding: 1.5rem;
    flex: 1;
  }

  .event-meta {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }

  .event-meta-item {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    color: #4b5563;
  }

  .event-meta-item strong {
    min-width: 20px;
    color: #6b7280;
  }

  .event-description {
    color: #6b7280;
    font-size: 0.9rem;
    line-height: 1.6;
  }

  .event-footer {
    padding: 0 1.5rem 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .no-events {
    text-align: center;
    padding: 3rem 2rem;
    background: white;
    border-radius: 18px;
    box-shadow: 0 4px 16px rgba(15, 23, 42, 0.06);
    border: 1px solid #e5e7eb;
  }

  .no-events h3 {
    color: #6b7280;
    margin-bottom: 1rem;
    font-size: 1.3rem;
  }

  .no-events p {
    color: #9ca3af;
    font-size: 0.95rem;
  }

  .no-events a {
    color: #2563eb;
    text-decoration: none;
    font-weight: 600;
  }

  .no-events a:hover {
    text-decoration: underline;
  }
</style>

<div class="events-shell">
  <div class="page-header">
    <h1>Events</h1>
    <a href="/events/new" class="btn btn-success">+ Create Event</a>
  </div>

  <div class="filter-form">
    <h3>Filter Events</h3>
    <form method="GET" action="/events">
      <div class="filter-grid">
        <div>
          <label>Date</label>
          <input type="date" name="date" value="<%= filters.date || '' %>">
        </div>
        <div>
          <label>Category</label>
          <select name="category">
            <option value="">All Categories</option>
            <option value="Academic" <%= filters.category === 'Academic' ? 'selected' : '' %>>Academic</option>
            <option value="Social" <%= filters.category === 'Social' ? 'selected' : '' %>>Social</option>
            <option value="Sports" <%= filters.category === 'Sports' ? 'selected' : '' %>>Sports</option>
            <option value="Club" <%= filters.category === 'Club' ? 'selected' : '' %>>Club</option>
            <option value="Workshop" <%= filters.category === 'Workshop' ? 'selected' : '' %>>Workshop</option>
            <option value="Other" <%= filters.category === 'Other' ? 'selected' : '' %>>Other</option>
          </select>
        </div>
        <div>
          <label>Organizer</label>
          <input type="text" name="host" placeholder="Search by organizer..." value="<%= filters.host || '' %>">
        </div>
        <div style="display: flex; align-items: flex-end;">
          <button type="submit" class="btn" style="width: 100%;">Filter</button>
        </div>
      </div>
    </form>
  </div>

  <% if (events.length === 0) { %>
    <div class="no-events">
      <h3>No events found</h3>
      <p>Try changing your filters or <a href="/events/new">create a new event</a>!</p>
    </div>
  <% } else { %>
    <div class="events-grid">
      <% events.forEach(event => { %>
        <div class="event-card">
          <div class="event-header">
            <h3><%= event.title %></h3>
            <span class="badge badge-warning"><%= event.category %></span>
          </div>
          <div class="event-body">
            <div class="event-meta">
              <div class="event-meta-item">
                <strong>Date:</strong>
                <span><%= new Date(event.start_datetime).toLocaleDateString() %> <%= new Date(event.start_datetime).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %></span>
              </div>
              <div class="event-meta-item">
                <strong>Location:</strong>
                <span><%= event.location %></span>
              </div>
              <div class="event-meta-item">
                <strong>Host:</strong>
                <span><%= event.host_name %></span>
              </div>
              <div class="event-meta-item">
                <strong>Attendees:</strong>
                <span><%= event.attendee_count %> registered</span>
              </div>
            </div>
            <p class="event-description"><%= event.description ? (event.description.substring(0, 100) + (event.description.length > 100 ? '...' : '')) : 'No description' %></p>
          </div>
          <div class="event-footer">
            <a href="/events/<%= event.id %>" class="btn">Details</a>
          </div>
        </div>
      <% }); %>
    </div>
  <% } %>
</div>

<%- include('../partials/footer-layout') %>
