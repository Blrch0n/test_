<%- include('partials/header-layout') %>

<style>
  .dashboard-shell {
    max-width: 1200px;
    margin: 2.5rem auto 3rem;
    padding: 0 1.5rem;
  }

  .dashboard-header {
    background: #ffffff;
    padding: 2rem;
    border-radius: 20px;
    box-shadow: 0 4px 20px rgba(15, 23, 42, 0.08);
    border: 1px solid #e5e7eb;
    margin-bottom: 2rem;
  }

  .dashboard-header h1 {
    font-size: 2rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 0.5rem;
  }

  .dashboard-header p {
    color: #6b7280;
    font-size: 0.95rem;
  }

  .dashboard-header p strong {
    color: #111827;
    font-weight: 600;
  }

  .section-title {
    font-size: 1.3rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 1.25rem;
  }

  .quick-actions {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.25rem;
  }

  .action-card {
    background: white;
    padding: 1.75rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    border-radius: 18px;
    box-shadow: 0 4px 16px rgba(15, 23, 42, 0.06);
    border: 1px solid #e5e7eb;
    transition: all 0.3s;
  }

  .action-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(15, 23, 42, 0.12);
  }

  .action-card h3 {
    color: #111827;
    margin-bottom: 0.75rem;
    font-size: 1.1rem;
    font-weight: 600;
  }

  .action-card p {
    color: #6b7280;
    font-size: 0.9rem;
    line-height: 1.6;
    margin-bottom: 1.25rem;
  }
  .action-card a {
    text-align: center;
  }

  .action-label {
    display: inline-block;
    background: #f3f4f6;
    color: #374151;
    font-size: 0.7rem;
    padding: 0.3rem 0.6rem;
    border-radius: 6px;
    margin-bottom: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
</style>

<div class="dashboard-shell">
  <div class="dashboard-header">
    <h1>Hello, <%= user.name %>!</h1>
    <p>
      Role: <strong><%= user.role.toUpperCase() %></strong> | Email: <%=
      user.email %>
    </p>
  </div>

  <h2 class="section-title">Quick Actions</h2>

  <div class="quick-actions">
    <div class="action-card">
      <div>
        <span class="action-label">Browse</span>
        <h3>View Events</h3>
        <p>Discover new events happening at the university</p>
      </div>

      <a href="/events" class="btn">View</a>
    </div>

    <div class="action-card">
      <div>
        <span class="action-label">Create</span>
        <h3>Create Event</h3>
        <p>Organize a new event and invite participants</p>
      </div>

      <a href="/events/new" class="btn btn-success">Create</a>
    </div>

    <div class="action-card">
      <div>
        <span class="action-label">Manage</span>
        <h3>My Events</h3>
        <p>Manage your created events</p>
      </div>

      <a href="/events/my/list" class="btn">View</a>
    </div>

    <div class="action-card">
      <div>
        <span class="action-label">Statistics</span>
        <h3>Host Dashboard</h3>
        <p>View event statistics and participants</p>
      </div>

      <a href="/host/dashboard" class="btn">Dashboard</a>
    </div>

    <% if (user.role === 'admin') { %>
    <div class="action-card">
      <div>
        <span class="action-label">Admin</span>
        <h3>Admin Dashboard</h3>
        <p>Manage all events and users</p>
      </div>

      <a href="/admin/events" class="btn btn-danger">Admin</a>
    </div>
    <% } %>
  </div>
</div>

<%- include('partials/footer-layout') %>
