<%- include('partials/header-layout') %>

<style>
  .hero {
    background: #ffffff;
    color: #111827;
    padding: 4rem 2rem;
    text-align: center;
    border-radius: 20px;
    margin-bottom: 3rem;
    border: 1px solid #e5e7eb;
    box-shadow: 0 4px 20px rgba(15, 23, 42, 0.06);
  }

  .hero h1 {
    font-size: 2.75rem;
    margin-bottom: 1rem;
    font-weight: 700;
    color: #111827;
    line-height: 1.2;
  }

  .hero p {
    font-size: 1.15rem;
    margin-bottom: 2rem;
    color: #6b7280;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .hero-buttons .btn {
    padding: 0.85rem 2rem;
    font-size: 1.05rem;
  }

  .features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .feature-card {
    background: white;
    padding: 2rem;
    border-radius: 18px;
    box-shadow: 0 4px 16px rgba(15, 23, 42, 0.06);
    border: 1px solid #e5e7eb;
    transition: all 0.3s;
  }

  .feature-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(15, 23, 42, 0.12);
  }

  .feature-card h3 {
    color: #111827;
    margin-bottom: 1rem;
    font-size: 1.35rem;
    font-weight: 600;
  }

  .feature-card p {
    color: #6b7280;
    line-height: 1.7;
    font-size: 0.95rem;
  }

  .feature-label {
    display: inline-block;
    background: #2563eb;
    color: white;
    font-size: 0.75rem;
    padding: 0.35rem 0.75rem;
    border-radius: 6px;
    margin-bottom: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
</style>

<div class="hero">
  <h1>Welcome to the Event Management Portal</h1>
  <p>Discover, create, and manage university events</p>
  <% if (!user) { %>
  <div class="hero-buttons">
    <a href="/register" class="btn btn-success">Get Started</a>
    <a href="/events" class="btn">Browse Events</a>
  </div>
  <% } else { %>
  <div class="hero-buttons">
    <a href="/events" class="btn btn-success">Browse Events</a>
    <a href="/events/new" class="btn">Create Event</a>
  </div>
  <% } %>
</div>

<div class="features">
  <div class="feature-card">
    <span class="feature-label">Discovery</span>
    <h3>Find Events</h3>
    <p>
      Browse university events filtered by date, category, and organizer.
      Find events that match your interests.
    </p>
  </div>

  <div class="feature-card">
    <span class="feature-label">Management</span>
    <h3>Organize Events</h3>
    <p>
      Create your own events and share them with the university community.
      Manage registrations and track attendance.
    </p>
  </div>

  <div class="feature-card">
    <span class="feature-label">Registration</span>
    <h3>Easy Sign-Up</h3>
    <p>
      Register for events with one click and receive email confirmation.
    </p>
  </div>
</div>

<%- include('partials/footer-layout') %>
